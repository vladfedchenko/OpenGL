#include <GL/glew.h>
#include <GL/gl.h>
#include <string>
#include <vector>

namespace VladFedchenko{
namespace GL{

	typedef struct {
		GLenum type;
		const char* filename;
	} ShaderInfo;

	class ShaderProgram
	{
	private:
		GLuint program = 0;

	private:
		void ReadShader(const char* filename, std::string &s);

	public:

		ShaderProgram(const ShaderInfo *shaders, int shaderCount);
		ShaderProgram(GLuint program);
	};

}}
