#include <GL/glew.h>
#include <GL/gl.h>
#include "Camera.h"

namespace VladFedchenko{
namespace GL{

	class RenderObject
	{
	protected:
		GLuint vao = 0;
		GLuint *vbos = nullptr;
		unsigned int vboCount;

		Camera *camera = nullptr;

	public:

		RenderObject(unsigned int vboCount, Camera *camera);
		virtual ~RenderObject();

		virtual void Render(unsigned long timeSpan) = 0;

	};

	class TexturedObject
	{
	protected:
		GLuint *textures = nullptr;
		unsigned int texCount;

	public:
		TexturedObject(unsigned int texCount);
		virtual ~TexturedObject();

	};

	class ElementArrayObject
	{

	};

}}
