#include "../Headers/RenderObject.h"

namespace VladFedchenko{
namespace GL{

// RenderObject region

	RenderObject::RenderObject(unsigned int vboCount)
		: vboCount(vboCount)
	{
		this->vbos= new GLuint[vboCount];
	}

	RenderObject::~RenderObject()
	{
		delete this->vbos;
	}

// end RenderObject region

// TexturedRenderObject region

	TexturedRenderObject::TexturedRenderObject(unsigned int texCount)
		: texCount(texCount)
	{
		this->textures = new GLuint[this->texCount];
	}

// end TexturedRenderObject region

}}

