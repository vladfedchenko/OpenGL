#include <GL/gl.h>

namespace VladFedchenko.GL
{

	class RenderObject
	{
	protected:
		GLuint program;
		GLuint vao;
		GLuint vbos[];
	};

	class StaticRenderObject : public RenderObject
	{
	public:

		virtual void Render() = 0;
	};

	class AnimatedRenderObject : public RenderObject
	{
	public:

		virtual void Render(unsigned long timeSpan) = 0;
	};

	class TexturedRenderObject
	{
	protected:
		GLuint textures[];
		unsigned int texCount;
	};

}
